# PlantUML Editor - Environment Configuration
# Copy this file to .env and modify as needed

# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================

# API Configuration
VITE_API_URL=/api

# Application Configuration
NODE_ENV=production
VITE_APP_TITLE=PlantUML Editor - Professional Edition

# Java Server Configuration
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC
SPRING_PROFILES_ACTIVE=production
SERVER_PORT=8090

# Docker Configuration
COMPOSE_PROJECT_NAME=plantuml-editor

# Security (Change in production!)
# JWT_SECRET=your-jwt-secret-here
# API_KEY=your-api-key-here

# ==============================================
# OPTIONAL: DATABASE CONFIGURATION
# ==============================================
# For future database integration
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=plantuml_editor
# DB_USER=plantuml
# DB_PASSWORD=your-password-here

# ==============================================
# OPTIONAL: EXTERNAL SERVICES
# ==============================================
# Redis for caching (future feature)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Monitoring (future feature)
# PROMETHEUS_ENABLED=true
# GRAFANA_ENABLED=true

# ==============================================
# DOCKER-SPECIFIC SETTINGS
# ==============================================
# These are used by docker-compose.yml

# Network configuration
FRONTEND_PORT=3000
BACKEND_PORT=8090

# Container resource limits
JAVA_MEMORY_LIMIT=1g
NGINX_WORKER_PROCESSES=auto
